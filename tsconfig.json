{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "lib": ["es2018", "dom"],
    "jsx": "react",
    "esModuleInterop": true,
    "strict": true,
    "typeRoots": ["./typings.d.ts", "node_modules/@types"]
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/__stories__/**/*",
    "./typings.d.ts",
    "./.storybook"
  ]
}
